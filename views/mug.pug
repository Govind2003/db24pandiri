extends layout

block content
  h1= title
  - const tree = [{mug_type:"plastic",size:"small",age:"11"},{mug_type:"steel",size:"medium",age:"14"},{mug_type:"iron",size:"large",age:"8"}]
  - let results;
  script.
    function buy(x){
      alert('Purchased Item: ' + x)
   } 
  div(class='container-fluid')
    div(class='row')
      each results, index in tree
        div(class='col-sm-2' onclick='buy('+index+')') #{results}